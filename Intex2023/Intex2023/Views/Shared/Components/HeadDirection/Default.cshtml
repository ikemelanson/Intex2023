<!--View component for filtering head direction on the burial records page-->
@model IEnumerable<string>

<div class="d-grid gap-2 text-center">

    <a asp-controller="Home" asp-action="BurialRecords" asp-route-headdirection="" asp-route-pageNum="1" class="btn btn-outline-secondary">No Head Direction Filtering</a>

    @foreach (string t in Model.Where(s => !string.IsNullOrWhiteSpace(s)))
    {
        <a asp-controller="Home" asp-action="BurialRecords" asp-route-headdirection="@t" asp-route-pageNum="1"
           class="btn btn-outline-secondary">@t</a>
    }
</div>
