@model BurialsViewModel
<!-- page title -->
<section class="page-title-section overlay bg-cover" style="background-image:url('https://i.postimg.cc/VLrh7szq/hierogl.jpg');">
    <div class="container">
        <div class="row" style="background: #FFCD6E; opacity:0.9;">
            <div class="col-md-8">
                <ul class="list-inline custom-breadcrumb mb-2" >
                    <li class="list-inline-item"><a class="h2 font-secondary" asp-controller="Home" asp-action="Index" style="color:white;">Home</a></li>
                    <li class="list-inline-item text-white h3 font-secondary nasted">All Burial Records</li>
                </ul>
                <p class="mb-0" style="color:white;">This page displays all excavated burials and relevant details about the burials. Come back often to see what new information has been discovered</p>
            </div>
        </div>
    </div>
</section>
<!-- /page title -->
<!-- courses -->

<section class="section">
    
    <div class="container">
        <div id="sex">
            <vc:sex></vc:sex>
        </div>
        <div id="northsouth">
            <vc:north-south></vc:north-south>
        </div>        
        <div id="eastwest">
            <vc:east-west></vc:east-west>
        </div>
        <div id="headdirection">
            <vc:head-direction></vc:head-direction>
        </div>
        <div id="ageatdeath">
            <vc:age-at-death></vc:age-at-death>
        </div>
        <div id="cats">
            <vc:category></vc:category>
        </div>





        <!-- course list -->
        <div class="row justify-content-center">
            
            @foreach (Burial b in Model.burialmain)
            {
                <partial name="BurialSummary" model="b" />

            }
            


        </div>
        <!-- /course list -->
        <div page-blah="@Model.PageInfo" page-action="BurialRecords" page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-outline-dark"
             page-class-selected="btn-primary" class="row justify-content-center"></div>
    </div>

</section>
<!-- /courses -->