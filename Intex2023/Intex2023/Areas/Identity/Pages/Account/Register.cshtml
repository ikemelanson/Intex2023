@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<section class="section bg-gray">
    <div class="container">
<div class="row">
            <div class="col-lg-7 mb-4 mb-lg-0">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div><br />
                <input asp-for="Input.Email" class="form-control mb-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span><br />
                <input asp-for="Input.Password" class="form-control mb-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span><br />
                 <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    <div class="col-12 checkbox"><hr /></div>
                    <div><button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button></div><br />
        </form>
    </div>
