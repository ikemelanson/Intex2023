@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!--Begin the login area-->
<section class="section bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 mb-4 mb-lg-0">
                <form id="account" method="post" class="row">
                    <h2>Use a local account to log in.</h2>
                    <hr />
                        <input asp-for="Input.Email" class="form-control mb-3" autocomplete="username" aria-required="true" placeholder="name@example.com" /><br />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <input asp-for="Input.Password" class="form-control mb-3" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span><br />
                    <div class="col-12 checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div><br />

                            <hr />
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </div>
        
