@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}
<!--This functionality is not added but in the future we could require users to confirm their emails-->
<section class="page-title-section overlay bg-cover" style="background-image:url('https://i.postimg.cc/VLrh7szq/hierogl.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <ul class="list-inline mb-2">
                    <li class="list-inline-item text-white h3 font-secondary nasted">Resend Email Confirmation</li>
                </ul>
                <p class="text-lighten mb-0">Our courses offer a good compromise between the continuous assessment favoured by some universities and the emphasis placed on final exams by others.</p>
            </div>
        </div>
    </div>
</section>

<section class="section bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-title">Enter your email</h2>
            </div>
            </div>
            <div class="row">
                <div class="col-lg-7 mb-4 mb-lg-0">
                    <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
                            <input asp-for="Input.Email" class="form-control mb-3" aria-required="true" name="email" placeholder="Email Address" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <hr />
            <button type="submit" class="w-100 btn btn-lg btn-primary">Resend</button>
        </form>
    </div>
</div>
        </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
