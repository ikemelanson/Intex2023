@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<!--Allows users to reset their password if they do not know it anymore. This functionality is not fully implemented but the option is here for the future.-->
<section class="section bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-title">Enter your email for a secure password reset link.</h2>
            </div>
        </div>
<div class="row">
            <div class="col-lg-7 mb-4 mb-lg-0">
                <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" name="email" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>            
                    <hr />

            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>
    </div>
</div>
</div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
